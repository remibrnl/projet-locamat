<div class="modal fade" id="userModifyModal" tabindex="-1" role="dialog" aria-labelledby="userModifyModalTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="userModifyModalTitle">Modifier Utilisateur</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
                <form action="/adminUsers/userModify" method="POST">
                    <div class="form-group">
						<label for="newLastName">Nom</label>
						<input type="text" class="form-control" id="newlastName" name="lastName" placeholder="Hülkenberg" required>
                    </div>
                    
					<div class="form-group">
							<label for="newFirstName">Prénom</label>
							<input type="text" class="form-control" id="newfirstName" name="firstName" placeholder="Nicolas" required>
					</div>
					
					<div class="form-group">
						<label for="newMail">Mail</label>
						<input type="mail" class="form-control" id="newmail" name="mail" placeholder="nicolas.hulkenberg@mail.com" required>
					</div>
                    
                    <div class="form-group">
						<label for="newEmail">Mot de passe</label>
						<input type="password" class="form-control" id="newPassword" name="password" placeholder="password" required>
                    </div>
                    
					<div>
                        <label for="isAdmin">Utilisateur administrateur</label>
                        <input type="checkbox" id="isAdminModify" name="isAdmin"> 
                    </div>
                    
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
						<button type="submit" class="btn btn-primary">Confirmer</button>
					</div>
				</form>
		</div>
		
	</div>
</div>