<div class="modal fade" id="updateDeviceModal-<%= device.ref %>" tabindex="-1" role="dialog" aria-labelledby="updateDeviceModalTitle-<%= device.ref %>" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="updateDeviceModalTitle-<%= device.ref %>">Modifier matériel</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
            </div>
            <form action="/adminDevices/updateDevice" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="deviceRef" value=<%= device.ref %>>
                    <div class="form-group">
                        <label for="newDeviceInputName" name="name">Nom</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= device.name %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="newDeviceInputVersion" name="version">Version</label>
                        <input type="text" class="form-control" id="version" name="version" value="<%= device.version %>">
                    </div>
                    
                    <!-- <div class="form-group">
                        <label for="newDeviceInputPicture">Photo (non-implentée)</label>
                        <input type="file" class="form-control-file" id="newUserInputPicture">
                    </div>
                    
                    <div class="form-group">
                        <label for="newDeviceInputPhoneNumber">Numero de téléphone</label>
                        <input type="number" class="form-control" id="newDeviceInputPhoneNumber" value="<%= //device. %>">
                    </div> -->
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" ">Confirm</button>
                </div>
            </form>
		
	</div>
</div>