<!-- NEW USER CREATION POPUP/MODAL -->
<div class="modal fade" id="createUserModal" tabindex="-1" role="dialog" aria-labelledby="createUserModalTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="createUserModalTitle">Nouvel utilisateur</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form>

					<div class="form-group">
						<label for="newUserInputFirstname">Prénom</label>
						<input type="text" class="form-control" id="newUserInputFirstname" placeholder="Pierre">
					</div>

					<div class="form-group">
							<label for="newUserInputLastname">Nom</label>
							<input type="text" class="form-control" id="newUserInputLastname" placeholder="Gasly">
					</div>

					<div class="form-group">
						<label for="newUserInputEmail">Adresse email</label>
						<input type="email" class="form-control" id="newUserInputEmail" aria-describedby="emailHelp" placeholder="pierre.gasly@scuderiaalphatauri.com">
					</div>
					
					<div class="form-group">
						<label for="newUserInputID">Matricule</label>
						<input type="number" class="form-control" id="newUserInputID" placeholder="10">
					</div>
				</form>
				<div class="form-check">
					<input type="radio" class="form-check-input" name="newUserRadiosRole" id="newUserRadioRoleStandard" value="standard" checked>
					<label for="newUserRadioRoleStandard" class="form-check-label">Emprunteur</label>
				</div>
				<div class="form-check">
					<input type="radio" class="form-check-input" name="newUserRadiosRole" id="newUserRadioRoleAdmin" value="admin">
					<label for="newUserRadioRoleAdmin" class="form-check-label">Administrateur</label>
				</div>
		</div>
		<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
				<button type="button" class="btn btn-primary">Créer</button>
			</div>
		</div>
	</div>
</div>