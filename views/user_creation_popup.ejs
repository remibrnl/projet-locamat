<!-- NEW USER CREATION POPUP/MODAL -->
<div class="modal fade" id="createUserModal" tabindex="-1" role="dialog" aria-labelledby="createUserModalTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="createUserModalTitle">Nouvel utilisateur</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form action="/adminUsers/createUser" method="POST">

					<div class="form-group">
						<label for="newUserInputFirstname">Pr√©nom</label>
						<input type="text" class="form-control" id="firstName" name="firstName" placeholder="Pierre">
					</div>

					<div class="form-group">
							<label for="newUserInputLastname">Nom</label>
							<input type="text" class="form-control" id="lastName" name="lastName" placeholder="Gasly">
					</div>

					<div class="form-group">
						<label for="newUserInputEmail">Adresse email</label>
						<input type="email" class="form-control" id="mail" name="mail" aria-describedby="emailHelp" placeholder="pierre.gasly@scuderiaalphatauri.com">
					</div>
					
					<div class="form-group">
						<label for="newUserInputID">Matricule</label>
						<input type="text" class="form-control" id="id" name= "id" placeholder="PG05168">
					</div>

					<div class="form-group">
						<label for="newPassword">Matricule</label>
						<input type="password" class="form-control" id="password" name="password" placeholder="password">
					</div>
					
					<div>
                        <label for="isAdmin">Administrator user</label>
                        <input type="checkbox" id="isAdmin" name="isAdmin"> 
					</div>
					
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
						<button type="submit" class="btn btn-primary">Creer</button>
					</div>
				</form>
			</div>	
		</div>
	</div>
</div>