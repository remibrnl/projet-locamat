<!-- Borrow device Modal/Popup -->
<div class="modal fade" id="borrowDeviceModal" tabindex="-1" aria-labelledby="borrowDeviceModalTitle" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="borrowDeviceModaTitle">Réserver un matériel</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form action="/" method="POST">
					<div class="modal-body">
						<div class="form-group">
							<label for="borrowDeviceSelect">Matériel</label>
							<select id="borrowDeviceInputDevice" name="device" class="form-control">

								<% allDevicesList.forEach(device => { %>
									<option value="<%= JSON.stringify(device); %>">
										<%= device.ref %>, <%= device.name %> <%= device.version %>
									</option>
								<% }); %>
							</select>
						</div>
						
						<div class="form-group">
								<label for="borrowDeviceInputStartDate">Date d'emprunt</label>
								<input type="date" class="form-control" id="borrowDeviceInputStartDate" name="borrowingStartDate">
						</div>
						
						<div class="form-group">
								<label for="borrowDeviceInputEndDate">Date de rendu</label>
								<input type="date" class="form-control" id="borrowDeviceInputEndDate" name="borrowingEndDate">
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
						<button type="submit" class="btn btn-primary">Confirmer</button>
					</div>
				</form>
			</div>
		</div>
	</div>